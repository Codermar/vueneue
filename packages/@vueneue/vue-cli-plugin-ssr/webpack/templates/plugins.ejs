<% for (const name in plugins) { %>
  let <%= name %> = {};
  <% if (plugins[name].ssr === false) { %>
  if (process.client) {
    <%= name %> = require('<%= plugins[name].src %>');
  }
  <% } else { %>
  <%= name %> = require('<%= plugins[name].src %>');
  <% } %>
<% } %>

export default async (context) => {
  <% for (const name in plugins) { %>
  if (<%= name %> && <%= name %>.default) {
    <% if (plugins[name].ssr === false) { %>
    if (process.client) {
      await <%= name %>.default(context);
    }
    <% } else { %>
    await <%= name %>.default(context);
    <% } %>
  }
  <% } %>
};
